---
import { CardProject } from "../components/CardProject.jsx";
---

<section id="projects">
  <div class="projects-title">
    <h2>Proyectos</h2>
    <span>Proyectos mas revelantes</span>
  </div>
  <div class="conteiner-cards">
    <CardProject client:load />
    <CardProject client:load />
    <CardProject client:load />
    <CardProject client:load />
    <CardProject client:load />
    <CardProject client:load />
  </div>
</section>

<style is:global>
  #projects {
    position: relative;
    z-index: 999;
    margin: auto;
    width: clamp(100px, 95%, 1200px);
    padding-top: 80px;
  }
  .projects-title {
    display: flex;
    flex-flow: column;
    justify-content: center;
    gap: 10px;
    color: var(--color-white);
  }
  .projects-title > h2 {
    font-size: clamp(1.5rem, 5vw, 3rem);
    color: var(--color-white);
    margin-bottom: 3vw;
    text-align: center;
  }
  .projects-title > span {
    font-size: clamp(1.2rem, 2vw, 1.3rem);
    margin-bottom: 1vw;
    color: var(--color-text);
  }
  .conteiner-cards {
    display: flex;
    justify-content: center;
    width: 100%;
    flex-flow: row wrap;
    gap: 20px;
    margin-top: 20px;
  }
  .card-project {
    background-color: transparent;
    flex: 1 1 300px;
    max-width: 350px;
    height: 420px;
    perspective: 1000px;
    font-family: sans-serif;
  }
  .card-project-inner {
    position: relative;
    width: 100%;
    height: 100%;
    text-align: center;
    transition: transform 0.8s;
    transform-style: preserve-3d;
    border-radius: 1rem;
    background-color: var(--color-bg-secondary);
  }
  .card-project.open .card-project-inner {
    transform: rotateY(180deg);
  }

  .flip-card-front,
  .flip-card-back {
    box-shadow: 0 8px 14px 0 rgba(0, 0, 0, 0.2);
    position: absolute;
    width: 100%;
    height: 100%;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    border: var(--border-light);
    border-radius: 1rem;
    box-shadow: var(---shadow-light);
    transition: box-shadow 0.3s ease-in-out;
  }
  .flip-card-back:hover,
  .flip-card-front:hover {
    box-shadow: var(--shadow-hover);
  }

  .flip-card-front {
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
  }
  .card-image {
    min-width: 100%;
    height: auto;
  }
  .card-image > img {
    width: 100%;
    height: 100%;
    border-radius: 1rem;
  }
  .card-front-title {
    padding-left: 20px;
    padding-right: 10px;
    font-size: clamp(0.9rem, 2vw, 1.1rem);
    margin-top: 10px;
    color: var(--color-accent);
    text-align: start;
    font-weight: 600;
  }
  .flip-card-front > span {
    font-size: clamp(0.8rem, 2.3vw, 1rem);
    margin-top: 10px;
    text-align: start;
    padding-left: 20px;
    padding-right: 10px;
    color: var(--color-text-secondary);
  }
  .card-front-desp {
    margin-top: 10px;
    font-size: clamp(0.8rem, 1.6vw, 1rem);
    color: var(--color-text);
    padding-left: 20px;
    padding-right: 10px;
    text-align: start;
  }
  .card-front-buttoms{
    display: flex;
    justify-content: end;
    height: 55px;
  } 
  .card-front-buttoms > button {
    height: 40px;
    border: none;
    background-color: var(--color-primary);
    color: var(--color-white);
    padding: 10px 20px;
    width: fit-content;
    margin: 5px 10px;
    
  }
  .flip-card-back {
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    gap: 10px;
    padding: 20px;
    transform: rotateY(180deg);
  }
  .flip-card-back > p {
    font-size: clamp(1rem, 2vw, 1.2rem);
    color: var(--color-white);
    text-align: start;
    margin-bottom: 5px;
  }
  .flip-card-back > span {
    font-size: clamp(0.8rem, 1.5vw, 1rem);
    color: var(--color-text-secondary);
    text-align: start;
    margin-bottom: 6px;
  }
  .flip-card-back > ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-flow: row wrap;
    gap: 10px;
  }
  .flip-card-back > ul > li {
    font-size: clamp(0.6rem, 1.5vw, 0.9rem);
    color: var(--color-text-secondary);
    margin: 5px 0;
    color: var(--color-accent);
  }
  .flip-card-back > button {
    border: none;
    background-color: var(--color-primary);
    color: var(--color-white);
    padding: 10px 20px;
    font-size: 1rem;
  }
</style>
